


<!-- Pdf settings modal-->

<div id="pdf-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title text-center">Wybierz opcje dokumentu </h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                {{ form_start(pdf_form, { 'attr': {'class': 'form form-horizontal'} }) }}

                <div class="form-body">
                    <div class="form-group row" >
                        {{ form_label(pdf_form.showTables, 'Dokument z tabelami', { 'label_attr': {'class': 'col-md-4 label-control'} }) }}
                        <div class="col-md-7 mx-auto">
                            {{ form_widget(pdf_form.showTables, { 'attr': {
                                'class': ' switch',
                                'data-icon-cls':'fa',
                                'data-off-icon-cls':'fa ft-thumbs-down',
                                'data-on-icon-cls':'fa ft-thumbs-up',
                                'data-off-label':'Nie',
                                'data-on-label':'Tak',
                                'data-group-cls':'btn-group-sm',
                                'data-style':'slow'
                            } }) }}

                        </div>
                        <div class="col-md-1 mx-auto" data-toggle="tooltip" data-placement="right" title="Czy chcesz mieć w pdfie tabele z urządzeniami?">
                            <i class="la la-question red-font-22"></i>
                        </div>

                    </div>
                    <div class="form-group row">
                        {{ form_label(pdf_form.showBuildingData, 'Widoczne dane budynku', { 'label_attr': {'class': 'col-md-4 label-control'} }) }}
                        <div class="col-md-7 mx-auto">
                            {{ form_widget(pdf_form.showBuildingData, { 'attr': {
                                'class': ' switch',
                                'data-icon-cls':'fa',
                                'data-off-icon-cls':'fa ft-thumbs-down',
                                'data-on-icon-cls':'fa ft-thumbs-up',
                                'data-off-label':'Nie',
                                'data-on-label':'Tak',
                                'data-group-cls':'btn-group-sm'
                            } }) }}
                        </div>
                        <div class="col-md-1 mx-auto" data-toggle="tooltip" data-placement="right" title="Czy chcesz pokazać dane adresowe budynku?">
                            <i class="la la-question red-font-22"></i>
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(pdf_form.showClientData, 'Widoczne dane klienta', { 'label_attr': {'class': 'col-md-4 label-control'} }) }}
                        <div class="col-md-7 mx-auto">
                            {{ form_widget(pdf_form.showClientData, { 'attr': {
                                'class': ' switch form-control',
                                'data-icon-cls':'fa',
                                'data-off-icon-cls':'fa ft-thumbs-down',
                                'data-on-icon-cls':'fa ft-thumbs-up',
                                'data-off-label':'Nie',
                                'data-on-label':'Tak',
                                'data-group-cls':'btn-group-sm'
                            } }) }}
                        </div>
                        <div class="col-md-1 mx-auto" data-toggle="tooltip" data-placement="right" title="Czy chcesz pokazać dane adresowe klienta?">
                            <i class="la la-question red-font-22"></i>
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(pdf_form.inspectors, 'Osoby podpisujące przegląd', { 'label_attr': {'class': 'col-md-4 label-control'} }) }}
                        <div class="col-md-7 mx-auto">
                            {{ form_widget(pdf_form.inspectors, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-md-1 mx-auto" data-toggle="tooltip" data-placement="right" title="Zaznaczony inspektor pojawi się na dole każdej strony z miejscem do podpisu.">
                            <i class="la la-question red-font-22"></i>
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(pdf_form.showStamp, 'Widoczna główna pieczątka na dole', { 'label_attr': {'class': 'col-md-4 label-control'} }) }}
                        <div class="col-md-7 mx-auto">
                            {{ form_widget(pdf_form.showStamp, { 'attr': {
                                'class': ' switch',
                                'data-icon-cls':'fa',
                                'data-off-icon-cls':'fa ft-thumbs-down',
                                'data-on-icon-cls':'fa ft-thumbs-up',
                                'data-off-label':'Nie',
                                'data-on-label':'Tak',
                                'data-group-cls':'btn-group-sm'
                            } }) }}
                        </div>
                        <div class="col-md-1 mx-auto" data-toggle="tooltip" data-placement="right"
                             title="Wybierasz czy chcesz na dole każdej strony mieć pieczątke. Po wybraniu możesz wybrać dowolną zdefiniowaną pieczątkę główną.">
                            <i class="la la-question red-font-22"></i>
                        </div>
                    </div>
                    {% form_theme pdf_form 'Form/fields.html.twig' %}
                    <div id="chose-stamp"  class="form-group row">
                        <label class="col-md-4 label-control required">Wybierz główna</label>
                        <div class="col-md-7 mx-auto">

                            {{ form_widget(pdf_form.mainStamps, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-md-1 mx-auto" data-toggle="tooltip" data-placement="right" title="Wybierasz pieczątkę główną na dół strony">
                            <i class="la la-question red-font-22"></i>
                        </div>
                    </div>
                    <div id=""  class="form-group row">
                        <label class="col-md-4 label-control required">Wybierz pieczątkę dla inspektorów</label>
                        <div class="col-md-7 mx-auto">

                            {{ form_widget(pdf_form.stamps, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-md-1 mx-auto" data-toggle="tooltip" data-placement="right" title="Wybierz pieczątki dla inspektorów? Możesz nie wybrać żadnej.">
                            <i class="la la-question red-font-22"></i>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="la la-file-pdf-o"></i> Wygeneruj dokument PDF
                    </button>
                    {{ form_end(pdf_form) }}
                    <button type="button" class="btn btn-info" data-dismiss="modal"><i class="la la-close"></i> Zamknij
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
