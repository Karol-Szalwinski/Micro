


<!-- Pdf settings modal-->

<div id="pdf-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title text-center">Wybierz opcje dokumentu </h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                {{ form_start(pdf_form, { 'attr': {'class': 'form form-horizontal'} }) }}

                <div class="form-body">
                    <div class="form-group row">
                        {{ form_label(pdf_form.showTables, 'Dokument z tabelami', { 'label_attr': {'class': 'col-md-4 label-control'} }) }}
                        <div class="col-md-8 mx-auto">
                            {{ form_widget(pdf_form.showTables, { 'attr': {
                                'class': ' switch',
                                'data-icon-cls':'fa',
                                'data-off-icon-cls':'fa ft-thumbs-down',
                                'data-on-icon-cls':'fa ft-thumbs-up',
                                'data-off-label':'Nie',
                                'data-on-label':'Tak',
                                'data-group-cls':'btn-group-sm',
                                'data-style':'slow'
                            } }) }}

                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(pdf_form.showBuildingData, 'Widoczne dane budynku', { 'label_attr': {'class': 'col-md-4 label-control'} }) }}
                        <div class="col-md-8 mx-auto">
                            {{ form_widget(pdf_form.showBuildingData, { 'attr': {
                                'class': ' switch',
                                'data-icon-cls':'fa',
                                'data-off-icon-cls':'fa ft-thumbs-down',
                                'data-on-icon-cls':'fa ft-thumbs-up',
                                'data-off-label':'Nie',
                                'data-on-label':'Tak',
                                'data-group-cls':'btn-group-sm'
                            } }) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(pdf_form.showClientData, 'Widoczne dane klienta', { 'label_attr': {'class': 'col-md-4 label-control'} }) }}
                        <div class="col-md-8 mx-auto">
                            {{ form_widget(pdf_form.showClientData, { 'attr': {
                                'class': ' switch form-control',
                                'data-icon-cls':'fa',
                                'data-off-icon-cls':'fa ft-thumbs-down',
                                'data-on-icon-cls':'fa ft-thumbs-up',
                                'data-off-label':'Nie',
                                'data-on-label':'Tak',
                                'data-group-cls':'btn-group-sm'
                            } }) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(pdf_form.inspectors, 'Osoby podpisujące przegląd', { 'label_attr': {'class': 'col-md-4 label-control'} }) }}
                        <div class="col-md-8 mx-auto">
                            {{ form_widget(pdf_form.inspectors, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(pdf_form.showStamp, 'Widoczna pieczątka', { 'label_attr': {'class': 'col-md-4 label-control'} }) }}
                        <div class="col-md-8 mx-auto">
                            {{ form_widget(pdf_form.showStamp, { 'attr': {
                                'class': ' switch',
                                'data-icon-cls':'fa',
                                'data-off-icon-cls':'fa ft-thumbs-down',
                                'data-on-icon-cls':'fa ft-thumbs-up',
                                'data-off-label':'Nie',
                                'data-on-label':'Tak',
                                'data-group-cls':'btn-group-sm'
                            } }) }}
                        </div>
                    </div>
                    {% form_theme pdf_form 'Form/fields.html.twig' %}
                    <div id="chose-stamp"  class="form-group row">
                        <label class="col-md-4 label-control required">Wybierz główna</label>
                        <div class="col-md-8 mx-auto">

                            {{ form_widget(pdf_form.mainStamps, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div id=""  class="form-group row">
                        <label class="col-md-4 label-control required">Wybierz pieczątkę dla inspektorów</label>
                        <div class="col-md-8 mx-auto">

                            {{ form_widget(pdf_form.stamps, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="la la-file-pdf-o"></i> Wygeneruj dokument PDF
                    </button>
                    {{ form_end(pdf_form) }}
                    <button type="button" class="btn btn-info" data-dismiss="modal"><i class="la la-close"></i> Zamknij
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
