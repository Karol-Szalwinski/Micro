    <!-- END: Page JS-->

    <!-- BEGIN: AJAX change status and test -->
    <script>
        $('.status-checkbox').change(function () {

            $.ajax({
                url: '/inspecteddevice/' + this.id.substring(1) + '/changestatus/' + this.id.substring(0, 1),
                type: 'POST',
                dataType: 'json',
                async: true,

                success: function (data, status) {


                },
                error: function (xhr, textStatus, errorThrown) {
                    alert('Błąd requestu ajax.');
                }
            });
        })


    </script>

    <!-- BEGIN: AJAX change comment -->
    <script>
        $(document).ready(function () {
            $(".hidden-input").click(function () {

                var comment = $(this).find('p').text();

                $(this).find("input").attr('type', 'text').val(comment).focus();
                $(this).find('p').text('');
            });
        });

        $(document).ready(function () {
            $(".hidden-input").find("input").blur(function () {
                $(this).attr('type', 'hidden');
                var comm = ($(this).val().toString() == "") ? null : $(this).val();

                $.ajax({
                    url: '/inspecteddevice/' + this.id.substring(1) + '/changecomment/' + comm,
                    type: 'POST',
                    dataType: 'json',
                    async: true,

                    success: function (data) {
                        var id = data['id'];
                        $("#p" + id).text(data['comm']);

                    },
                    error: function () {
                        $(this).parent().find('p').text('Wprowadź ponownie');
                    }
                });
            });
        });
    </script>

    <!-- BEGIN: AJAX delete device -->
    <script>
        $(document).ready(function () {
            $('.del-device').click(function () {
                var device = this.id.substring(4);
                $.ajax({
                    url: '/fireinspection/' + {{ fireInspection.id }} +'/delete/' + device,
                    type: 'DELETE',
                    dataType: 'json',
                    async: true,

                    success: function (data) {
                        $('#row-' + device).remove();
                        if (data['success'] == false) {
                            alert("Pomyślnie usunięto urządzenie");
                        } else {
                            alert("Wystąpił problem z usunięciem tego urządzenia z bazy!");
                        }
                        ;


                    },
                    error: function () {
                        alert('Błąd usuwania - spróbuj przeładować stronę');
                    }
                });
            });
        });
    </script>

    <!-- BEGIN: AJAX delete device -->
    <script>
        $(document).ready(function () {
            $('#load-miss-device').click(function () {
                var device = this.id.substring(4);
                $.ajax({
                    url: '/fireinspection/' + {{ fireInspection.id }} +'/loadmissdevices',
                    type: 'POST',
                    dataType: 'json',
                    async: true,

                    success: function (data) {

                        console.log(data['missing-devices']);




                    },
                    error: function () {
                        alert('Błąd ładowania');
                    }
                });
