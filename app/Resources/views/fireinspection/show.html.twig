                        <div class="card-body">


                            <h4><i class="ft-user"></i> Podstawa opracowania</h4>
                            <hr>
                            <div class="col-md-8">
                                <p>{{ fireInspection.legal|nl2br }}</p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>



    <!-- Inspected devices section-->

    <section class="row all-contacts">
        <div class="col-12">
            <div class="card">
                <div class="card-head">
                    <div class="card-header">
                        <h4 class="card-title">Tabela 1 - Urządzenia</h4>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a class="btn btn-sm btn-danger box-shadow-2 round btn-min-width pull-right"
                                       href="{{ path('fireinspection_load_devices', {'id': fireInspection.id}) }}">
                                        Załaduj wszystkie urządzenia z budynku</a>
                                </li>
                                <li>
                                    <button id="load-miss-device"
                                            class="btn btn-sm btn-info box-shadow-2 round btn-min-width pull-right">
                                        Dodaj do listy brakujące urządzenie
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <!-- Task List table -->
                        <button type="button" class="btn btn-sm btn-danger delete-all mb-1">Delete All</button>
                        <div class="table-responsive">
                            <table id="inspected-devices"
                                   class="table table-white-space table-bordered row-grouping display no-wrap icheck table-middle text-center">
                                <thead>
                                <tr>
                                    <th>Pętli</th>
                                    <th>Urządzenie</th>
                                    <th>Typ</th>
                                    <th>Status</th>
                                    <th>Wynik testu</th>
                                    <th>Uwagi</th>
                                    <th>Akcje</th>


                                </tr>
                                </thead>
                                <tbody>
                                {% for device in fireInspection.inspectedDevices|sort %}
                                    <tr id="row-{{ device.id }}">
                                        <td>
                                            <div>
                                                <a class="media-heading name">{{ device.loopNo }}</a>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <div>{{ device.number }} </div>
                                        </td>
                                        <td class="text-center">
                                            <div>{{ device.shortname }}</div>
                                        </td>
                                        <td class="text-center">
                                            {% set checked = false %}
                                            {% if device.status == 1 %}
                                                {% set checked = true %}
                                            {% endif %}
                                            <input type="checkbox" class="column_filter status-checkbox switch"
                                                   id="s{{ device.id }}" {% if checked %}checked{% endif %}
                                                   data-icon-cls="fa" data-off-icon-cls="fa ft-thumbs-down"
                                                   data-on-icon-cls="fa ft-thumbs-up"
                                                   data-off-label="OFF"
                                                   data-on-label="ON"
                                            >

                                        </td>
                                        <td class="text-center">
                                            {% set checked = false %}
                                            {% if device.test == 1 %}
                                                {% set checked = true %}
                                            {% endif %}
                                            <input type="checkbox" class="column_filter status-checkbox switch"
                                                   id="t{{ device.id }}" {% if checked %}checked{% endif %}
                                                   data-icon-cls="fa" data-off-icon-cls="fa ft-thumbs-down"
                                                   data-on-icon-cls="fa ft-thumbs-up"
                                                   data-off-label="NEG"
                                                   data-on-label="POZ"
                                            >

                                        </td>
                                        <td class="text-center hidden-input">
                                            <p id="p{{ device.id }}">{{ device.comment }}</p>
                                            <input id="c{{ device.id }}"
                                                   type="hidden" value="">
                                        </td>

                                        <td>
                                            <a data-toggle="modal" data-target="#EditContactModal"
                                               id="edit-{{ device.id }}"
                                               class="primary edit mr-1"><i class="la la-pencil"></i></a>
                                            <a id="del-{{ device.id }}" class="danger delete mr-1 del-device"><i
                                                        class="la la-trash-o"></i></a>

                                        </td>

                                    </tr>
                                {% endfor %}
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

