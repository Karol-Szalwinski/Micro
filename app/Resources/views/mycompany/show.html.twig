{% extends 'base.html.twig' %}

{% block title %}Klient{% endblock %}

{% block body %}
    <!-- Content header -->
    <!--suppress Annotator -->
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12">
            <h3 class="content-header-title mb-0">Baza klientów</h3>
            <div class="row breadcrumbs-top">
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a
                                    href="{{ path('micro_default_index') }}">Główna</a>
                        </li>

                        <li class="breadcrumb-item">Słowniki
                        </li>

                        <li class="breadcrumb-item active">Dane mojej firmy
                        </li>

                    </ol>
                </div>
            </div>
        </div>

        <div class="content-header-left col-md-6 col-12">
            <div class="btn-group float-md-right" role="group"
                 aria-label="Button group with nested dropdown">
                <div class="btn-group" role="group">
                    <a class="btn btn-outline-info round" href="{{ path('mycompany_edit') }}"><i
                                class="la la-edit"></i> Edytuj dane firmy</a>

                </div>
            </div>
        </div>
    </div>
    <!-- Content header -->

    <!-- Basic form layout section start -->
    <section id="horizontal-form-layouts">
        <div class="row">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title" id="horz-layout-basic">Dane mojej firmy</h4>
                        <a class="heading-elements-toggle"><i
                                    class="la la-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                <li><a data-action="close"><i class="ft-x"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-content collpase show">
                        <div class="card-body">


                            <h4><i class="ft-user"></i> Dane Podstawowe</h4>
                            <hr>
                            <div class="col-md-12">
                                <table class="table table-borderless table-column">
                                    <tr>
                                        <th>Nazwa firmy:</th>
                                        <td>{{ mycompany.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Ulica i numer:</th>
                                        <td>{{ mycompany.street }}</td>
                                    </tr>
                                    <tr>
                                        <th>Kod pocztowy i miasto</th>
                                        <td>{{ mycompany.postCode }} {{ mycompany.city }}</td>
                                    </tr>
                                    <tr>
                                        <th>NIP</th>
                                        <td>{{ mycompany.taxNumber }}</td>
                                    </tr>
                                    <tr>
                                        <th>Telefon</th>
                                        <td>{{ mycompany.phoneNo }}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="card-content collpase show">
                        <div class="card-body">
                            <h4><i class="ft-image"></i> Pieczątka firmy</h4>
                            <p>Pieczątka będzie widoczna na wydrukach</p>
                            <hr>
                            <div class="col-md-12">

                                {% if mycompany.stamp %}
                                    <img src="{{ asset('uploads/images/' ~ mycompany.stamp) }}"
                                         style="width:200px; height:80px"
                                         class="img-fluid"
                                         alt="Pieczątka firmy">
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block scripts %}

{% endblock %}
