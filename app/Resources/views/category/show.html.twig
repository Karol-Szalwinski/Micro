{% extends 'base_product.html.twig' %}

{% block title %}Kategoria{% endblock %}

{% block body %}
    <!-- Content header -->
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12">
            <h3 class="content-header-title mb-0">Kategoria</h3>
            <div class="row breadcrumbs-top">
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a
                                    href="{{ path('micro_default_index') }}">Główna</a>
                        </li>
                        <li class="breadcrumb-item"><a href="{{ path('category_index') }}">
                                Lista kategorii</a>
                        </li>
                        <li class="breadcrumb-item active">{{ category.name }}
                        </li>

                    </ol>
                </div>
            </div>
        </div>
        <div class="content-header-left col-md-6 col-12">
            <div class="btn-group float-md-right" role="group" aria-label="Button group with nested dropdown">
                <div class="btn-group" role="group">
                    <a class="btn btn-outline-info " href="{{ path('category_edit', { id : category.id }) }}"><i
                                class="la la-pencil"></i> Edytuj kategorię</a>

                </div>
            </div>
        </div>
    </div>
    <!-- Content header -->

    <!-- Basic form layout section start -->
    <section id="horizontal-form-layouts">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title" id="horz-layout-basic">Dane kategorii</h4>

                    </div>
                    <div class="card-content collpase show">
                        <div class="card-body">

                            <div class="col-md-12">
                                <table class="table table-sm table-borderless table-column">
                                    <tr>
                                        <th>Numer identyfikacyjny</th>
                                        <td>{{ category.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Nazwa kategorii:</th>
                                        <td>{{ category.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Kategoria nadrzędna:</th>
                                        <td>
                                            {% if category.parent %}{{ category.parent.name }}{% else %}To jest kategoria główna{% endif %}
                                        </td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title" id="horz-layout-basic">Kategorie podrzędne</h4>

                    </div>
                    <div class="card-content collpase show">
                        <div class="card-body">

                            <div class="col-md-12">
                                <table class="table table-sm table-borderless table-column">
                                    <tr>
                                        <th>Lista kategorii:</th>
                                        <td>{% for subCategory in category.children %}
                                                {{ subCategory.name }}
                                            {% endfor %}
                                        </td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title" id="horz-layout-basic">Parametry</h4>

                    </div>
                    <div class="card-content collpase show">
                        <div class="card-body">

                            <div class="col-md-12">
                                <table class="table table-sm table-borderless table-column">
                                    <tr>
                                        <th>Lista parametrów:</th>
                                        <td>{% for parameter in category.parameters %}
                                                {{ parameter.name }} <br>
                                            {% endfor %}
                                        </td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

    {% block scripts %}

        <!-- BEGIN: Vendor JS-->
        <script src="{{ asset('app-assets/vendors/js/vendors.min.js') }}"></script>
        <script src="{{ asset('app-assets/vendors/js/tables/datatable/datatables.min.js') }}"></script>
        <script src="{{ asset('app-assets/vendors/js/extensions/sweetalert.min.js') }}"></script>
        <!-- END: Page Vendor JS-->

        <!-- BEGIN: Page JS-->
        <script src="{{ asset('app-assets/js/scripts/tables/datatables/datatable-basic.js') }}"></script>
        <script src="{{ asset('assets/js/sweet-alerts.js') }}"></script>
        <!-- END: Page JS-->



    {% endblock %}