{% extends 'base.html.twig' %}

{% block title %}Lista budynków{% endblock %}

{% block body %}
    <!-- Content header -->
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12">
            <h3 class="content-header-title mb-0">Lista budynków</h3>
            <div class="row breadcrumbs-top">
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('micro_default_index') }}">Główna</a>
                        </li>

                        <li class="breadcrumb-item active">Lista budynków
                        </li>

                    </ol>
                </div>
            </div>
        </div>
        {#<div class="content-header-left col-md-6 col-12">#}
            {#<div class="btn-group float-md-right" role="group" aria-label="Button group with nested dropdown">#}
                {#<div class="btn-group" role="group">#}
                    {#<a class="btn btn-outline-info round" href="{{ path('building_index') }}"><i#}
                                {#class="la la-user-plus"></i> Dodaj nowy</a>#}

                {#</div>#}
            {#</div>#}
        {#</div>#}
    </div>
    <!-- Content header -->


    <section class="row all-contacts">
        <div class="col-12">
            <div class="card">
                <div class="card-head">
                    <div class="card-header">
                        <h4 class="card-title">Lista budynków</h4>
                        <div class="heading-elements mt-0">
                        </div>
                    </div>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <!-- Task List table -->
                        {#<button type="button" class="btn btn-sm btn-danger delete-all mb-1">Delete All</button>#}
                        <div class="table-responsive">
                            <table id="table-buildings"
                                   class="table table-white-space table-bordered row-grouping display no-wrap icheck table-middle text-center">
                                <thead>
                                <tr>
                                    <th>Pokaz</th>
                                    <th>Nazwa</th>
                                    <th>Klient</th>
                                    <th>Ulica</th>
                                    <th>Miasto</th>
                                    <th>Liczba przeglądów</th>
                                    <th>Akcje</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for building in buildings %}
                                    <tr>
                                        <td><a class="btn btn-outline-info btn-sm"
                                               href="{{ path('building_show', { 'id': building.id }) }}">
                                                <i class="la la-search"></i> Pokaż</a>
                                        </td>
                                        <td>
                                            <div class="media">
                                                {#<div class="media-left pr-1"><span#}
                                                            {#class="avatar avatar-sm avatar-online rounded-circle"><img#}
                                                                {#src="../../../app-assets/images/portrait/small/avatar-s-2.png"#}
                                                                {#alt="avatar"><i></i></span></div>#}
                                                <div class="media-body media-middle">
                                                    <a class="media-heading name">{{ building.name }}</a>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center"
                                            >
                                            <div>{{ building.client.name }}</div>
                                        </td>
                                        <td class="text-center"
                                            >
                                            <div>{{ building.street }} {{ building.houseNo }}
                                                {% if building.flatNo is not null %}/ {{ building.flatNo }}{%  endif %}</div>
                                        </td>
                                        <td class="text-center"
                                            >
                                            {{ building.city }}
                                        </td>
                                        <td class="text-center"
                                            >
                                            {{ building.documents|length }}
                                        </td>

                                        <td>
                                            <a href="{{ path('building_edit', { 'id': building.id }) }}"
                                               class="primary edit mr-1"><i class="la la-pencil"></i></a>
                                            <a data-href="{{ path('building_delete', { 'id': building.id }) }}"
                                               class="danger delete-building-btn mr-1"><i
                                                        class="la la-trash-o"></i></a>

                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Pokaż</th>
                                    <th>Nazwa</th>
                                    <th>Klient</th>
                                    <th>Ulica</th>
                                    <th>Miasto</th>
                                    <th>Liczba przeglądów</th>
                                    <th>Akcje</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block scripts %}
    <script src="{{ asset('app-assets/vendors/js/tables/datatable/datatables.min.js') }}"></script>

    <script src="{{ asset('app-assets/js/scripts/tables/datatables/datatable-basic.js') }}"></script>

    <script src="{{ asset('app-assets/vendors/js/extensions/sweetalert.min.js') }}"></script>

    <script src="{{ asset('assets/js/building-index.js') }}"></script>

  
{% endblock %}
