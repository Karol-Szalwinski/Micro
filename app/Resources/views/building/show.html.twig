                                    <tr>
                                        <th>Nr urządzenia</th>
                                        <th>Nazwa</th>
                                        <th>Skrót</th>
                                        <th>Serial</th>
                                        <th>Adress</th>
                                        <th>Opis</th>
                                        <th>Ostatni przegląd</th>
                                        <th>Akcje</th>
                                    </tr>

                                    </thead>
                                    <tbody id="tbody-{{ loopDev.id }}">
                                    {% for device in loopDev.fireProtectionDevices|sort %}
                                        <tr>
                                            <td class="text-center">
                                                <a class="text-center"
                                                   id="number-{{ device.id }}">{{ device.number }}</a>
                                            </td>
                                            <td class="text-center">
                                                <a class="text-center"
                                                   id="name-{{ device.id }}">{{ device.name }}</a>
                                            </td>
                                            <td class="text-center">
                                                <a class="text-center "
                                                   id="shortname-{{ device.id }}">{{ device.shortname }}</a>
                                            </td>
                                            <td class="text-center">
                                                <a class="text-center "
                                                   id="serial-{{ device.id }}">{{ device.serial }}</a>
                                            </td>
                                            <td class="text-center">
                                                <a class="text-center "
                                                   id="address-{{ device.id }}">{{ device.address }}</a>
                                            </td>
                                            <td class="text-center">
                                                <a class="text-center "
                                                   id="desc-{{ device.id }}">{{ device.desc }}</a>
                                            </td>
                                            <td class="text-center">
                                                <a class="timeline-date">
                                                    {{ device.lastServiceDate is empty ? "Brak" : device.lastServiceDate| date('Y/m/d') }}
                                                </a>
                                            </td>

                                            <td>
                                                <a data-toggle="modal" data-target="#EditDeviceModal"
                                                   id="edit-{{ device.id }}"
                                                   class="primary edit-row mr-1"><i class="la la-pencil"></i></a>
                                                <a class="danger delete mr-1"><i class="la la-trash-o"></i></a>

                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <th>Nr urządzenia</th>
                                        <th>Nazwa</th>
                                        <th>Skrót</th>
                                        <th>Serial</th>
                                        <th>Adress</th>
                                        <th>Opis</th>
                                        <th>Ostatni przegląd</th>
                                        <th>Akcje</th>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% else %}
        <div>brak</div>
    {% endfor %}

