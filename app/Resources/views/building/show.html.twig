{% extends 'base.html.twig' %}

{% block body %}
    <h1>Building</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ building.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ building.name }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ building.street }}</td>
            </tr>
            <tr>
                <th>Houseno</th>
                <td>{{ building.houseNo }}</td>
            </tr>
            <tr>
                <th>Flatno</th>
                <td>{{ building.flatNo }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ building.city }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ building.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('building_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('building_edit', { 'id': building.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
