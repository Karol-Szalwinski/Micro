{% extends 'base.html.twig' %}

{% block body %}
    <!-- BEGIN: Content-->

    <div class="content-body">
        <div class="product-detail">
            <div class="card">
                <div class="card-body">
                    <div class="card-content">
                        <div class="row">
                            <div class="col-12">
                                <div class="btn-group float-md-right" role="group"
                                     aria-label="Button group with nested dropdown">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-outline-info "
                                           href="{{ path('product_edit', { id : product.id }) }}"><i
                                                    class="la la-pencil"></i> Edytuj produkt</a>

                                    </div>
                                </div>
                                <h2 class="product-title float-left">{{ product.name }}</h2><br><br>
                                <h4 class=>{{ product.category.fullPath }}</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-5">
                                <div class="product-img d-flex align-items-center">
                                    {% if product.image %}
                                    <a href="{{ asset('uploads/images/' ~ product.image) }}">
                                        <img
                                                src="{{ asset('uploads/images/' ~ product.image) }}"
                                                style="width:600px; "
                                                class="img-fluid"
                                                alt="PieczÄ…tka firmy">

                                    </a>
                                        {%  else %}
                                            <img id="preview" width="600" src="https://via.placeholder.com/600x600>
                                        {% endif %}
                                </div>
                                <div>
                                    <table class="table table-borderless  table-striped">
                                        <tbody>
                                        <tr>
                                            <th>
                                                Produkt Id
                                            </th>
                                            <td>
                                                {{ product.id }}
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                Model
                                            </th>
                                            <td>
                                                {{ product.model }}
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                Producent
                                            </th>
                                            <td>
                                                {{ product.producent }}
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                Moja Cena
                                            </th>
                                            <td>
                                                <b>{{ product.price|price }}</b>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>

                                </div>

                            </div>

                            <div class="col-7">
                                <table class="table table-borderless table-striped">
                                    <tbody>
                                    {% for parameter in product.productParameters %}
                                        <tr>
                                            <th>
                                                {{ parameter.name }}
                                            </th>
                                            <td>
                                                {{ parameter.value }}
                                            </td>
                                        </tr>

                                    {% endfor %}
                                    </tbody>
                                </table>


                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            {#<div class="container">#}
                            <a href="#description" class="btn btn-outline-info btn-block" data-toggle="collapse"
                            >Opis</a><br>
                            <div id="description" class="collapse">{{ product.description|raw }}</div>
                            {#</div>#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- END: Content-->
{% endblock %}
