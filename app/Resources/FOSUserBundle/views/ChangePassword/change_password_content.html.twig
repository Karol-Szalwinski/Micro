{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password', 'class': 'form-horizontal' } }) }}

<div class="form-group" >
    {{ form_label(form.current_password, 'Stare hasło', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
    <div class="col-lg-6 ">   
        {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź hasło'} }) }}
    </div>
</div> 

<div class="form-group" >
    {{ form_label(form.plainPassword.first, 'Nowe hasło', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
    <div class="col-lg-6 ">   
        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź hasło'} }) }}
    </div>
</div>           
<div class="form-group" >
    {{ form_label(form.plainPassword.second, 'Powtórz nowe hasło', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
    <div class="col-lg-6 ">   
        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Powtórz hasło'} }) }}
    </div>
</div> 

<input type="submit" value="Zapisz zmiany" class="btn btn-primary btn-grad control-label" />
<br>
{{ form_end(form) }}

